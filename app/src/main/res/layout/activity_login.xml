<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity2"
    tools:context=".LoginAct">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnlogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="32dp"
        android:text="LOGIN"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:backgroundTint="#430E83"
        app:layout_constraintBottom_toTopOf="@+id/tv_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_text"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="*Login to your account"
        android:textStyle="italic"
        android:textColor="#06283D"
        android:layout_marginBottom="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_username"/>
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back !"
        android:layout_marginLeft="24dp"
        android:letterSpacing="0"
        android:textStyle="bold"
        android:textColor="#256D85"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_login"/>

    <EditText
        android:id="@+id/et_pass"
        android:background="@drawable/bg_corner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btnlogin"
        android:hint="Enter your password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:backgroundTint="#6E8C77"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:drawableTint="#210650"
        android:layout_marginBottom="25dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/et_pass"
        android:hint="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_corner"
        android:backgroundTint="#6E8C77"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:drawableTint="#210650"
        android:layout_marginBottom="5dp"
        android:inputType="text"
        android:drawableStart="@drawable/ic_person_24"
        />




</androidx.constraintlayout.widget.ConstraintLayout>