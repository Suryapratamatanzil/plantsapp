<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity3"
    tools:context=".Signup_Act">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#256D85"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_register"
        android:text="*Create your new account"
        android:textSize="20sp"
        android:textColor="#9A9999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/et_fname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner"
        android:hint="Full Name"
        app:layout_constraintTop_toBottomOf="@+id/tv_create"
        android:layout_marginHorizontal="16dp"
        android:inputType="text"
        android:backgroundTint="#6E8C77"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:drawableTint="#210650"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/ic_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/et_gmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_fname"
        android:background="@drawable/bg_corner"
        android:hint="Gmail"
        android:layout_marginHorizontal="16dp"
        android:inputType="text"
        android:backgroundTint="#6E8C77"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:drawableTint="#210650"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/ic_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_gmail"
        android:background="@drawable/bg_corner"
        android:hint="Password"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:backgroundTint="#6E8C77"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:drawableTint="#210650"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/et_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:background="@drawable/bg_corner"
        android:hint="Confirm Password"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:backgroundTint="#6E8C77"
        android:padding="12dp"
        android:drawablePadding="10dp"
        android:drawableTint="#210650"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_signing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_sign"
        android:layout_marginHorizontal="35dp"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm"
        android:layout_marginTop="25dp"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="32dp"
        android:text="LOGIN"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:backgroundTint="#430E83"
        app:layout_constraintTop_toBottomOf="@+id/tv_signing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>